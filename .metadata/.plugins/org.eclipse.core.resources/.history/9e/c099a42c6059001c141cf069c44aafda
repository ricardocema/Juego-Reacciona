//PREGUNTA 1
public class NivelesAbiertos extends GeneralAbiertos implements ActionListener{
	public NivelesAbiertos() {
		super();
		PreguntaAbierta01();
	}
	String Respuesta01="Fluor";
	public void actionPerformed(ActionEvent e) {
		if (e.getSource().equals(BotonComprobar)) {
			if(Respuesta.getText().trim().equals(Respuesta01)) {
				JOptionPane.showMessageDialog(null, "Correcto");
			}
				else {
					JOptionPane.showMessageDialog(null, "Incorrecto");
				}
			}
		}
	}
}
