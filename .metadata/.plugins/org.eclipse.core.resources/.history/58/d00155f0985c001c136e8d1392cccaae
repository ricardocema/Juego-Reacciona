//Aquí se implementan los métodos usados en las clases General, GeneralAbiertos y Retos.
//Solo se comentará la primera pregunta de selección, la primera instrucción de la clase tutorial, la primera pregunta abierta y la primera pregunta de Reto, ya que las demás siguen la misma lógica
//PREGUNTA 1
//Aquí se crea la clase Nivel y se hace referencia a que se estará usando la clase General, ya que es la que contiene los métodos que se usarán
public class Nivel extends General implements ActionListener{
	public Nivel() {
		super();
		//Se llama al método PreguntaSeleccion1 creado en la clase General
		PreguntaSeleccion1();
	}
	//Se definen las acciones que se realizarán al dar click sobre los botones
	public void actionPerformed(ActionEvent e) {
		//Acciones sobre el boton B:
		if (e.getSource().equals(BotonB)) {
			//Como la opción correcta es la opción B, el puntaje aumentará en 5
			puntaje=Maspuntos(puntaje);
			//Como la opción correcta es la B, la variable correctas aumentará en 1
			correctas=correcto(correctas);
			//Al hacer click sobre el botón tambien se mostrará un mensaje avisando que la respues fue correcta, además de mostrar el puntaje y las preguntas correctas hasta el momento
			JOptionPane.showMessageDialog(null, "Correcto, tu puntaje es de: " + puntaje + " y llevas " + correctas + " preguntas correctas");
			//La ventana actual se cerrará para que no se acumulen las ventanas
			this.setVisible(false);
			//Se crea una nueva clase llamada instrucción1
			instruccion01 instruccion01 = new instruccion01();
		}
		//Por el contrario, si se hace click sobre la opción A, la cual es una opción incorrecta:
		if(e.getSource().equals(BotonA)) {
			puntaje=Menospuntos(puntaje);
						
			//Si el puntaje es menor que 3, el puntaje será automáticamente 0 para evitar puntajes negativos
			
			
			//Se mostrará un cuadro de dialogo avisando que la respuesta fue incorrecta, además de mostrar el puntaje y las respuestas correctas hasta el momento
			JOptionPane.showMessageDialog(null, "Incorrecto, tu puntaje es de: " + puntaje + " y llevas " + correctas + " preguntas correctas");
			//Se cerrará la ventana para evitar que se acumulen
			this.setVisible(false);
			//Se crea una nueva clase llamada instrucción1
			instruccion01 instruccion01 = new instruccion01();
		}
		//Si la opción elegida es la opción C
		if(e.getSource().equals(BotonC)) {
			//Si el puntaje es menor que 3, el puntaje será automaticamente igual a 0 para evitar puntajes negativos
			Menospuntos(puntaje);
			}
			
			//Se mostrará un mensaje avisando que la respuesta fue incorrecta, además de mostrar el puntaje y las respuestas correctas hasta el momento
			JOptionPane.showMessageDialog(null, "Incorrecto, tu puntaje es de: " + puntaje + " y llevas " + correctas + " preguntas correctas");
			//Se cierra la ventana para evitar que estas se acumulen
			this.setVisible(false);
			//Se crea la nueva clase instruccion1
			instruccion01 instruccion01 = new instruccion01();
			
		}
		
	}
	

//A continuación se crea la primera instrucción

//INSTRUCCION 1
//Se crea la nueva clase instruccion1
class instruccion01 extends General implements ActionListener{
	public instruccion01() {
		super();
		instruccion1();
	}
	public void actionPerformed(ActionEvent e) {
		if (e.getSource().equals(BotonAvanzar)) {
			this.setVisible(false);
			instruccion02 instruccion02 = new instruccion02();
			
		}
	}
}

